<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="@dimen/text_content_margin"
            android:paddingEnd="@dimen/text_content_margin"
            android:background="#EFEFEF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/resource_category"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="unkown"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textSize="14dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="0dp">
        <LinearLayout
            android:padding="@dimen/text_content_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_access_time"
                android:layout_marginEnd="5dp"
                android:tint="#888"/>

            <TextView
                android:id="@+id/resource_duration"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="200ms"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/resource_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="some resource"
                android:ellipsize="middle"
                android:maxLines="1"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textSize="14dp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>